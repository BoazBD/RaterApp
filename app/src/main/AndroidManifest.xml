<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bardavid.boaz.rater">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bardavid.boaz.rater.SettingsActivity"
            android:exported="true" />
        <activity
            android:name="com.bardavid.boaz.rater.MyRatingsActivity"
            android:exported="true" />
        <activity
            android:name="com.bardavid.boaz.rater.RateActivity"
            android:exported="true" />
        <activity
            android:name="com.bardavid.boaz.rater.ChoosePhotoActivity"
            android:exported="true"
            android:label="@string/title_activity_choose_photo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.bardavid.boaz.rater.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>